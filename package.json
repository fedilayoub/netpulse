{
  "name": "netpulse-plasmo",
  "displayName": "Netpulse",
  "version": "0.0.1",
  "description": "Netpulse is a browser extension that allows you to test your internet speed and latency directly from your browser. You can check your download speed, upload speed and ping at the same time.",
  "author": "Fedil Ayoub",
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fast-speedtest-api": "^0.3.2",
    "lucide-react": "^0.468.0",
    "next": "14.2.16",
    "ping.js": "0.2.3",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "eslint": "^8",
    "eslint-config-next": "14.2.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.16",
    "typescript": "^5"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  },
  "permissions": [
    "cookies",
    "scripting",
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "contextMenus"
  ]
}
